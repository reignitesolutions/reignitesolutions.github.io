---
import "../styles/global.css";

const {
  title = 'Reignite: Digital Agency for Clarity, Momentum, and Results',
  description = 'Get Clarity, Momentum, and Results. We deliver product strategy, UX design, and acceleration by embedding in your team. No buzzwords. Real progress.',
  ogImage = '/assets/social/og-image.jpg',
  canonical = 'https://www.reignites.co.uk',
} = Astro.props;

const GA_ID = 'G-Z2146Y81XC';
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <link rel="icon" type="image/png" sizes="48x48" href="/assets/brand/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/assets/brand/favicon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/brand/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/assets/brand/favicon-512.png" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&family=Noto+Sans+Display:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

    <script is:inline>
      {`
        (function () {
          const GA_ID = "${GA_ID}";
          const CONSENT_KEY = "reignite_cookie_consent";

          if (!GA_ID) return;

          window.dataLayer = window.dataLayer || [];
          function gtag(){window.dataLayer.push(arguments);}
          window.gtag = gtag;

          function userHasConsented() {
            try {
              const raw = localStorage.getItem(CONSENT_KEY);
              if (!raw) return false;
              const parsed = JSON.parse(raw);
              return parsed && parsed.analytics === true;
            } catch (e) {
              return false;
            }
          }

          // 1. Initial GTag setup (REQUIRED for Tag Assistant to detect the tag)
          gtag('js', new Date());
          
          // 2. Configure the GA4 stream UNCONDITIONALLY, but prevent sending a pageview.
          // This resolves the "tag not detected" error.
          gtag('config', GA_ID, { 
            'send_page_view': false, // IMPORTANT: Prevents sending data without consent
            'anonymize_ip': true 
          });

          // 3. If consent is already granted (from a previous session), fire the first pageview manually.
          if (userHasConsented()) {
            gtag('event', 'page_view');
          }

          // 4. Listen for consent update event to fire pageview if granted later.
          if (typeof window !== 'undefined') {
            window.addEventListener('reignite:consent-updated', function (event) {
              const detail = event.detail || {};
              if (detail.analytics === true) {
                // Now that config is done, only fire the event.
                gtag('event', 'page_view');
              }
            });
          }
        })();
      `}
    </script>
    
    <script is:inline>
      {`
        (function () {
          // Attaches a single click listener to the entire document for efficiency
          document.addEventListener('click', function(event) {
            // Use .closest() to find the element with data-ga4-cta, checking parents up the tree
            const ctaElement = event.target.closest('[data-ga4-cta]');

            if (ctaElement) {
              // Ensure gtag is defined and user has consented before tracking
              if (typeof window.gtag === 'function') {
                const ctaLabel = ctaElement.getAttribute('data-ga4-cta');
                // Capture the full link context for deeper analysis
                const ctaUrl = ctaElement.getAttribute('href') || 'no_url';
                // Trim link text to avoid overly long labels in GA4
                const ctaText = ctaElement.textContent.trim().substring(0, 100) || 'no_text';

                window.gtag('event', 'cta_click', {
                  event_category: 'engagement',
                  event_label: ctaLabel,
                  link_url: ctaUrl,
                  link_text: ctaText
                });
                
                // Optional: Console log for testing purposes
                // console.log('Reignite CTA Click:', ctaLabel, ctaUrl);
              }
            }
          });
        })();
      `}
    </script>

  </head>
  <body class="bg-surface text-ink">
    <slot />
  </body>
</html>