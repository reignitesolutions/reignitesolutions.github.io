---
import "../styles/global.css";

const {
  title = 'Reignite: Digital Agency for Clarity, Momentum, and Results',
  description = 'Get Clarity, Momentum, and Results. We deliver product strategy, UX design, and acceleration by embedding in your team. No buzzwords. Real progress.',
  ogImage = '/assets/social/og-image.jpg',
  canonical = 'https://www.reignites.co.uk',
} = Astro.props;

const GA_ID = 'G-Z2146Y81XC';
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <link rel="icon" type="image/png" sizes="48x48" href="/assets/brand/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/assets/brand/favicon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/brand/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/assets/brand/favicon-512.png" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&family=Noto+Sans+Display:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

    <script is:inline>
      {`
        (function () {
          const GA_ID = "${GA_ID}";
          const CONSENT_KEY = "reignite_cookie_consent";

          if (!GA_ID) return;

          // Define the core GA functions immediately, just like the standard code.
          window.dataLayer = window.dataLayer || [];
          function gtag(){window.dataLayer.push(arguments);}
          window.gtag = gtag;

          // Standard GA4 initialization calls
          gtag('js', new Date());

          // CRITICAL: Call config UNCONDITIONALLY for detection, but disable pageview.
          // This ensures the tag is "detected" (Momentum) without sending user data (Clarity).
          gtag('config', GA_ID, { 
            'send_page_view': false, 
            'anonymize_ip': true 
          });

          // --- Consent Logic ---

          function userHasConsented() {
            try {
              const raw = localStorage.getItem(CONSENT_KEY);
              if (!raw) return false;
              const parsed = JSON.parse(raw);
              return parsed && parsed.analytics === true;
            } catch (e) {
              return false;
            }
          }

          // A. If consent is already granted, fire the pageview manually.
          if (userHasConsented()) {
            gtag('event', 'page_view');
          }

          // B. Listener for the cookie banner to fire pageview later.
          if (typeof window !== 'undefined') {
            window.addEventListener('reignite:consent-updated', function (event) {
              const detail = event.detail || {};
              if (detail.analytics === true) {
                gtag('event', 'page_view');
              }
            });
          }
          
          // --- CTA Tracking Logic (Integrated Here) ---

          // Attaches a single click listener to the entire document for efficiency
          document.addEventListener('click', function(event) {
            const ctaElement = event.target.closest('[data-ga4-cta]');

            if (ctaElement) {
              // Only track CTA if gtag is available AND consent is given
              if (typeof window.gtag === 'function' && userHasConsented()) { 
                const ctaLabel = ctaElement.getAttribute('data-ga4-cta');
                const ctaUrl = ctaElement.getAttribute('href') || 'no_url';
                const ctaText = ctaElement.textContent.trim().substring(0, 100) || 'no_text';

                window.gtag('event', 'cta_click', {
                  event_category: 'engagement',
                  event_label: ctaLabel,
                  link_url: ctaUrl,
                  link_text: ctaText
                });
              }
            }
          });
          
        })();
      `}
    </script>
  </head>
  <body class="bg-surface text-ink">
    <slot />
  </body>
</html>