---
import "../styles/global.css";

const {
  title = "Reignite: Digital Agency for Clarity, Momentum, and Results",
  description = "Get Clarity, Momentum, and Results. We deliver product strategy, UX design, and acceleration by embedding in your team. No buzzwords. Real progress.",
  ogImage = "/assets/social/og-image.jpg",
  canonical = import.meta.env.PUBLIC_SITE_URL || "https://www.reignites.co.uk",
} = Astro.props;

const GA_ID = import.meta.env.PUBLIC_GA_ID;
---

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Favicon & App Icons -->
    <link rel="icon" type="image/png" sizes="48x48" href="/assets/brand/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/assets/brand/favicon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/brand/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/assets/brand/favicon-512.png" />

    <!-- Open Graph / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- (optional) your CSS bundles will be injected by Astro build -->

    {GA_ID && (
      <>
        <!-- GA library -->
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>

        <!-- Consent-aware GA init -->
        <script is:inline>
          {`
            (function () {
              // hard-coded at build time; this will be "G-Z2146Y81XC" in your output HTML
              const GA_ID = ${JSON.stringify(GA_ID)};
              const CONSENT_KEY = 'reignite_cookie_consent';

              // safety: if somehow GA_ID is empty, do nothing
              if (!GA_ID) return;

              // bootstrap gtag
              window.dataLayer = window.dataLayer || [];
              function gtag(){ window.dataLayer.push(arguments); }
              window.gtag = gtag;

              function startAnalytics() {
                gtag('js', new Date());
                gtag('config', GA_ID, { anonymize_ip: true });
              }

              function userHasConsented() {
                try {
                  const raw = localStorage.getItem(CONSENT_KEY);
                  if (!raw) return false;
                  const parsed = JSON.parse(raw);
                  return parsed && parsed.analytics === true;
                } catch (e) {
                  return false;
                }
              }

              // start immediately if they already said yes
              if (typeof window !== 'undefined' && userHasConsented()) {
                startAnalytics();
              }

              // listen to your CookieConsent component
              if (typeof window !== 'undefined') {
                window.addEventListener('reignite:consent-updated', function (event) {
                  const detail = event.detail || {};
                  if (detail.analytics === true) {
                    startAnalytics();
                  }
                });
              }
            })();
          `}
        </script>
      </>
    )}
  </head>
  <body class="bg-surface text-ink">
    <slot />
  </body>
</html>