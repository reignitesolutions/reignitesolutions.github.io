---
import Icon from '../components/Icon.astro';
---
<footer class="bg-black text-white py-14">
  <div class="container-reignite grid gap-10 md:grid-cols-4">
    
    <!-- Column 1: Brand -->
    <div class="space-y-1">
      <h2 class="text-lg font-display font-semibold">Reignite Solutions</h2>
      <p class="text-sm text-white/70">Clarity. Momentum. Results.</p>
      <p class="text-xs text-white/30">
        Â© {new Date().getFullYear()} Reignite Solutions Ltd.<br>All rights reserved.
      </p>
    </div>

    <!-- Column 2: Site Links -->
    <div>
      <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide text-white/70">Site</h3>
      <ul class="space-y-2 text-sm text-white/70">
        <li><a href="/" class="hover:text-white transition">Home</a></li>
        <li><a href="/services" class="hover:text-white transition">Services</a></li>
        <li><a href="/our-difference" class="hover:text-white transition">Our Difference</a></li>
        <li><a href="/who-we-serve" class="hover:text-white transition">Who We Serve</a></li>
        <li><a href="/contact" class="hover:text-white transition">Contact</a></li>
      </ul>
    </div>

    <!-- Column 3: Info / Legal -->
    <div>
      <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide text-white/70">Info</h3>
      <ul class="space-y-2 text-sm text-white/70">
        <li><a href="/nda" class="hover:text-white transition">Download our NDA (PDF)</a></li>
        <li><a href="/privacy" class="hover:text-white transition">Privacy Policy</a></li>
        <li><a href="/terms" class="hover:text-white transition">Terms &amp; Conditions</a></li>
        <li><a href="/cookies" class="hover:text-white transition">Cookie Policy</a></li>
        <li>
			<button
			  type="button"
			  class="hover:text-white transition"
			  onclick="window.reigniteToggleManage()"
			>
			  Cookie Settings
			</button>
		</li>
        <li><a href="/careers" class="hover:text-white transition">Careers</a></li>
      </ul>
    </div>

    <!-- Column 4: Contact -->
    <div class="space-y-4">
      <h3 class="text-sm font-semibold mb-3 uppercase tracking-wide text-white/70">Contact</h3>
      <p class="text-sm text-white/70">Based in Ilkley, West Yorkshire, UK</p>

      <!-- Telephone -->
      <a
        href="tel:+447352050404"
        class="flex items-center gap-2 text-sm text-white/80 hover:text-white transition"
      >
        <Icon name="phone-outgoing" class="w-5 h-5 text-white" alt="Telephone" />
        +44 (0)735 20 50 404
      </a>

      <!-- Email -->
      <a
        href="mailto:hello@reignites.co.uk"
        class="flex items-center gap-2 text-sm text-white/80 hover:text-white transition"
      >
        <Icon name="at-sign" class="w-5 h-5 text-white" alt="Email" />
        hello@reignites.co.uk
      </a>

      <!-- WhatsApp -->
      <div class="pt-1">
        <a
          href="https://wa.me/447352050404"
          class="inline-flex items-center gap-2 rounded-md px-3 py-2"
          aria-label="Chat with Reignite on WhatsApp"
          target="_blank"
          rel="noreferrer"
        >
          <img
            src="/assets/social/WhatsAppButtonGreenSmall.svg"
            alt="WhatsApp"
            class="h-8 w-auto"
            loading="lazy"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
