---
// src/components/TopBanner.astro

import CtaLink from './CtaLink.astro';
import Button from './Button.astro';

interface Props {
  eyebrow?: string;   // small label, e.g. "New service"
  title: string;      // main banner text
  body?: string;      // optional supporting line
  ctaLabel?: string;  // button text
  ctaHref?: string;   // button href
  buttonClass?: string;  // Passed to Button for custom styling (e.g., "normal-case")
  ctaVariant?: 'primary' | 'secondary'; // Passed to Button to set hierarchy
}

const {
  eyebrow = 'Update',
  title,
  body,
  ctaLabel,
  ctaHref,
  buttonClass,
  ctaVariant,
} = Astro.props;
---

<div class="bg-accent/5 border-b border-accent/30">
  <div class="container-reignite max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-3 py-3 md:py-3.5">
    <div class="space-y-1">
      {eyebrow && (
        <p class="text-[11px] font-semibold uppercase tracking-[0.25em] text-accent">
          {eyebrow}
        </p>
      )}
      <p class="text-sm md:text-base text-ink/80">
        {title}
      </p>
      {body && (
        <p class="text-xs md:text-sm text-ink/60">
          {body}
        </p>
      )}
    </div>

    {ctaLabel && ctaHref && (
      <Button
        href={ctaHref}
        category="TOP_BANNER"
        label={ctaLabel}
        context="light"
        size="small"
        class={buttonClass}
        variant={ctaVariant || 'primary'}
      >
        <span>{ctaLabel}</span>
        <span aria-hidden="true">â†’</span>
      </Button>
    )}
  </div>
</div>