---

/* src/components/Header.astro */

import "../styles/global.css";
import CtaLink from './CtaLink.astro'; 
import Button from './Button.astro';

const whatWeDoCols = [
  {
    title: 'Build',
    items: [
      { name: 'LaunchPad', href: '/launchpad', desc: 'Build first websites, MVPs, and digital products fast.' },
      { name: 'Brand & Website Refresh', href: '/brand-website-refresh', desc: 'Modernise your logo and site without starting from scratch.' },
      { name: 'Design Ignited', href: '/design-ignited', desc: 'Turn ideas into simple, attractive, and user-friendly products.' },
    ],
  },
  {
    title: 'Growth',
    items: [
      { name: 'Mission Control', href: '/mission-control', desc: 'Set direction, build alignment, and create a working plan.' },
      { name: 'Work Unblocked', href: '/work-unblocked', desc: 'Find and fix what is slowing you down and get projects moving again.' },
      { name: 'Engine Room', href: '/engine-room', desc: 'Keep live products improving with small, steady changes.' },
    ],
  },
  {
    title: 'Support',
    items: [
      { name: 'Leadership on Tap', href: '/leadership-on-tap', desc: 'Fractional senior product and delivery leadership on call.' },
      { name: 'Team Accelerator', href: '/team-accelerator', desc: 'Install a delivery rhythm your teams can actually sustain.' },
    ],
  },
];

const differenceCols = [
  {
    title: 'How we work',
    items: [
      { name: 'Outcomes First', href: '/outcomes-first', desc: 'We start with the result you need, then focus the work.' },
      { name: 'Hands-On Delivery', href: '/hands-on-delivery', desc: "We don't just advise. We embed ourselves and deliver traction." },
      { name: 'Jargon-Free', href: '/jargon-free', desc: 'Straightforward, transparent communication.' },
    ],
  },
  {
    title: 'Who we help',
    items: [
      { name: 'Who We Serve', href: '/who-we-serve', desc: 'Ambitious teams facing complexity and needing pace.' },
      { name: 'Our Difference overview', href: '/our-difference', desc: 'Why Reignite exists and what makes us different.' },
    ],
  },
  {
    title: 'Who we are',
    items: [
      { name: 'Meet the Team', href: '/meet-the-team', desc: 'Product and delivery experts based in Yorkshire.' },
      { name: 'Press & Media', href: '/press', desc: 'Official bios, photography and media details.' },
    ],
  },
];

---

<header class="sticky top-0 z-50 bg-surface/95 supports-[backdrop-filter]:backdrop-blur border-b border-ink/5 shadow-sm">
  <div class="container-reignite flex justify-between items-center h-16 md:h-20 gap-4 md:gap-6">
    <!-- BRAND -->
    <CtaLink 
      href="/" 
      category="HEADER" 
      label="LOGO" 
      class="group flex items-center gap-3 md:gap-4" 
      aria-label="Reignite Solutions home"
    >
      <img
        src="/assets/brand/logo-web.png"
        alt="Reignite Solutions logo"
        class="h-10 w-10 md:h-14 md:w-14 object-contain rounded-md"
        loading="eager"
      />
      <div class="leading-tight">
        <span class="block font-display text-base md:text-xl font-bold text-ink tracking-tight">
          Reignite Solutions
        </span>
        <span class="block text-xs md:text-base text-ink/70">
          Clarity. Momentum. Results.
        </span>
      </div>
    </CtaLink>

    <!-- DESKTOP NAV -->
    <nav class="hidden md:flex items-center gap-6" aria-label="Primary navigation">
      <!-- WHAT WE DO -->
      <div class="relative nav-dropdown-wrapper" data-dropdown>
        <button
          class="nav-link"
          type="button"
          data-dropdown-trigger
          aria-haspopup="true"
          aria-expanded="false"
        >
          <span>What We Do</span>
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div
          class="nav-dropdown absolute left-1/2 -translate-x-1/2 top-full mt-3 w-[840px] bg-surface border border-ink/5 rounded-xl shadow-2xl p-7 z-[55]"
          data-dropdown-panel
        >
          <div class="grid grid-cols-3 gap-6 items-start">
            {whatWeDoCols.map((col) => (
              <div class="space-y-3">
                <h4 class="text-sm font-bold uppercase text-accent tracking-wider border-b border-accent/20 pb-2">
                  {col.title}
                </h4>
                <ul class="space-y-2">
                  {col.items.map((item) => (
                    <li>
                      <CtaLink 
                        href={item.href} 
                        category="MEGAMENU_SERVICE"
                        label={item.name}
                        class="block rounded-md px-2 py-1 -mx-2 hover:bg-ink/5 group/item"
                      >
                        <span class="block text-base font-semibold text-ink group-hover/item:text-accent">
                          {item.name}
                        </span>
                        <span class="block text-xs text-ink/50 mt-1 leading-snug">
                          {item.desc}
                        </span>
                      </CtaLink>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          {/* Pricing strip (tidier + tighter) */}
          <div class="mt-5 bg-ink/5 rounded-lg px-4 py-3 flex items-center justify-between gap-3">
            <div>
              <p class="text-[12px] font-semibold uppercase tracking-[0.22em] text-accent">
                Pricing
              </p>
              <p class="text-sm text-ink/80">
                No waffle. No mystery. Just proper prices.
              </p>
            </div>
            <Button
              href="/pricing"
              category="MEGAMENU_PRICING"
              label="VIEW_PRICING"
              context="light"
              class="shrink-0"
            >
              View pricing
            </Button>
          </div>

          <CtaLink 
            href="/services" 
            category="MEGAMENU_LINK" 
            label="VIEW_FULL_SERVICES"
            class="block text-center pt-3 mt-5 border-t border-ink/5 text-sm font-semibold text-ink hover:text-accent"
          >
            View full services overview &raquo;
          </CtaLink>
        </div>
      </div>

      <!-- OUR DIFFERENCE -->
      <div class="relative nav-dropdown-wrapper" data-dropdown>
        <button
          class="nav-link"
          type="button"
          data-dropdown-trigger
          aria-haspopup="true"
          aria-expanded="false"
        >
          <span>Our Difference</span>
          <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <div
          class="nav-dropdown absolute left-1/2 -translate-x-1/2 top-full mt-3 w-[840px] bg-surface border border-ink/5 rounded-xl shadow-2xl p-7 z-[55]"
          data-dropdown-panel
        >
          <div class="grid grid-cols-3 gap-6 items-start">
            {differenceCols.map((col) => (
              <div class="space-y-3">
                <h4 class="text-sm font-bold uppercase text-accent tracking-wider border-b border-accent/20 pb-2">
                  {col.title}
                </h4>
                <ul class="space-y-2">
                  {col.items.map((item) => (
                    <li>
                      <CtaLink 
                        href={item.href} 
                        category="MEGAMENU_DIFFERENCE" 
                        label={item.name}
                        class="block rounded-md px-2 py-1 -mx-2 hover:bg-ink/5 group/item"
                      >
                        <span class="block text-base font-semibold text-ink group-hover/item:text-accent">
                          {item.name}
                        </span>
                        <span class="block text-xs text-ink/50 mt-1 leading-snug">
                          {item.desc}
                        </span>
                      </CtaLink>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>

          <CtaLink
            href="/outcomes-first"
            category="MEGAMENU_CTA"
            label="READ_OUTCOMES_FIRST"
            class="mt-5 inline-flex text-sm font-semibold text-ink hover:text-accent"
          >
            Start with Outcomes First &raquo;
          </CtaLink>
        </div>
      </div>

      <!-- DESKTOP CTA -->
      <Button href="/contact" category="HEADER" label="CONTACT_US_DESKTOP" context="light">
        Contact us
      </Button>
    </nav>

    <!-- MOBILE hamburger -->
    <button
      id="nav-toggle"
      class="md:hidden inline-flex items-center justify-center p-2 rounded hover:bg-ink/5"
      aria-controls="mobile-menu"
      aria-expanded="false"
      aria-label="Open navigation"
    >
      <span class="hamburger" aria-hidden="true">
        <span></span><span></span><span></span>
      </span>
    </button>
  </div>
</header>

<!-- MOBILE MENU -->
<div id="mobile-menu" class="mobile-menu" hidden aria-hidden="true">
  <div id="mobile-overlay" class="mobile-menu__overlay" aria-hidden="true"></div>

  <nav class="mobile-menu__panel" role="dialog" aria-modal="true" aria-label="Mobile navigation">
    <div class="mobile-menu__head">
      <span class="font-display font-semibold text-lg text-ink">Main Menu</span>
      <button id="nav-close" class="icon-btn" aria-label="Close navigation">âœ•</button>
    </div>

    <!-- Quick action -->
    <CtaLink
      href="/contact"
      category="MOBILE_MENU_QUICK"
      label="TALK_TO_US"
      class="mobile-quick"
    >
      <span>Talk to us</span>
      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </CtaLink>

    <!-- What we do (grouped like desktop) -->
    <div class="mobile-group">
      <p class="mobile-group__title">What we do</p>

      {whatWeDoCols.map((col) => (
        <div class="mt-3">
          <p class="text-[11px] font-semibold uppercase tracking-[0.12em] text-ink/60 px-1 mb-2">
            {col.title}
          </p>
          <ul class="mobile-list">
            {col.items.map((item) => (
              <li>
                <CtaLink
                  href={item.href}
                  category="MOBILE_SERVICE"
                  label={item.name}
                  class="mobile-link"
                >
                  <span class="mobile-link__text">
                    <span class="mobile-link__title">{item.name}</span>
                    <span class="mobile-link__desc">{item.desc}</span>
                  </span>
                  <svg class="mobile-link__chev" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </CtaLink>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Pricing (obvious on mobile) -->
    <div class="mobile-group">
      <p class="mobile-group__title">Pricing</p>
      <ul class="mobile-list">
        <li>
          <CtaLink href="/pricing" category="MOBILE_PRICING" label="VIEW_PRICING" class="mobile-link">
            <span class="mobile-link__text">
              <span class="mobile-link__title">View pricing</span>
              <span class="mobile-link__desc">Plain-English costs and ranges.</span>
            </span>
            <svg class="mobile-link__chev" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </CtaLink>
        </li>
      </ul>
    </div>

    <!-- Our difference (grouped like desktop) -->
    <div class="mobile-group">
      <p class="mobile-group__title">Our difference</p>

      {differenceCols.map((col) => (
        <div class="mt-3">
          <p class="text-[11px] font-semibold uppercase tracking-[0.12em] text-ink/60 px-1 mb-2">
            {col.title}
          </p>
          <ul class="mobile-list">
            {col.items.map((item) => (
              <li>
                <CtaLink
                  href={item.href}
                  category="MOBILE_DIFFERENCE"
                  label={item.name}
                  class="mobile-link"
                >
                  <span class="mobile-link__text">
                    <span class="mobile-link__title">{item.name}</span>
                    <span class="mobile-link__desc">{item.desc}</span>
                  </span>
                  <svg class="mobile-link__chev" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </CtaLink>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mobile-bottom-spacer" aria-hidden="true"></div>
  </nav>

  <!-- Sticky CTA bar -->
  <div class="mobile-cta">
    <Button
      href="/contact"
      category="MOBILE_BOTTOM_CTA"
      label="CONTACT_US"
      context="dark"
      class="mobile-cta__btn"
    >
      Contact us
    </Button>
  </div>
</div>

<!-- Controllers -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    /* Desktop mega menus with safe hover gap */
    document.querySelectorAll('[data-dropdown]').forEach((wrapper) => {
      const trigger = wrapper.querySelector('[data-dropdown-trigger]');
      const panel = wrapper.querySelector('[data-dropdown-panel]');
      let closeTimeout = null;

      const open = () => {
        clearTimeout(closeTimeout);
        wrapper.classList.add('is-open');
        trigger?.setAttribute('aria-expanded', 'true');
      };

      const close = () => {
        closeTimeout = setTimeout(() => {
          wrapper.classList.remove('is-open');
          trigger?.setAttribute('aria-expanded', 'false');
        }, 140);
      };

      trigger?.addEventListener('mouseenter', open);
      panel?.addEventListener('mouseenter', open);
      wrapper?.addEventListener('mouseleave', close);

      trigger?.addEventListener('focus', open);
      wrapper?.addEventListener('focusout', close);
    });

    /* Mobile slide-over */
    const mount = document.getElementById('mobile-menu');
    const btnOpen = document.getElementById('nav-toggle');
    const btnClose = document.getElementById('nav-close');
    const overlay = document.getElementById('mobile-overlay');

    const openNav = () => {
      mount.hidden = false;
      mount.setAttribute('aria-hidden', 'false');
      mount.dataset.open = 'true';
      document.body.classList.add('overflow-hidden', 'touch-none');
      btnOpen.setAttribute('aria-expanded', 'true');
      const firstLink = mount.querySelector('a[href]');
      firstLink && firstLink.focus();
    };

    const closeNav = () => {
      mount.dataset.open = 'false';
      mount.setAttribute('aria-hidden', 'true');
      setTimeout(() => {
        mount.hidden = true;
      }, 250);
      document.body.classList.remove('overflow-hidden', 'touch-none');
      btnOpen.setAttribute('aria-expanded', 'false');
      btnOpen.focus();
    };

    btnOpen?.addEventListener('click', openNav);
    btnClose?.addEventListener('click', closeNav);
    overlay?.addEventListener('click', closeNav);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeNav();
    });

    mount.querySelectorAll('.mobile-link').forEach((a) => {
      a.addEventListener('click', closeNav);
    });
    mount.querySelector('.mobile-quick')?.addEventListener('click', closeNav);
  });
</script>