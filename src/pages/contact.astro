---
// src/pages/contact.astro

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import Icon from '../components/Icon.astro';
import CtaLink from '../components/CtaLink.astro';

const { url } = Astro;
const errorParam = url.searchParams.get('error');

let errorMessage = '';
if (errorParam === 'name_missing') {
    errorMessage = 'Please provide your name. This helps us ensure a clear reply.';
} else if (errorParam === 'email_missing' || errorParam === 'email_invalid') {
    errorMessage = 'We need a valid email address to get back to you.';
} else if (errorParam === 'message_missing') {
    errorMessage = 'Please tell us what’s happening in the message field.';
} else if (errorParam === 'server_fail') {
    errorMessage = 'Something went wrong when trying to send your message. Please try again.';
}

const pageTitle = 'Contact | Reignite Solutions';
const pageDesc =
  'Contact Reignite Solutions — tell us what’s stuck or unclear in your organisation and we’ll outline a practical way forward.';
---
<BaseLayout title={pageTitle} description={pageDesc} canonical="/contact">
  <Header />

  <main class="min-h-screen bg-surface">
    <section class="pt-28 md:pt-32 pb-10">
      <div class="container-reignite max-w-6xl">
        <span
          class="inline-flex gap-2 bg-accent/10 text-accent text-xs font-semibold uppercase tracking-[0.25em] px-4 py-1 rounded-full mb-5"
        >
          Contact Reignite
        </span>
        <h1 class="text-3xl md:text-4xl font-display font-extrabold text-ink mb-3">
          Let’s talk about what you’re trying to move.
        </h1>
        <p class="text-ink/70 max-w-3xl">
          Tell us what’s stalled, noisy, or not landing with people. We’ll come back with a clear, outcome-led way to fix it.
        </p>
      </div>
    </section>

    <section class="pb-20">
      <div class="container-reignite max-w-6xl grid lg:grid-cols-3 gap-10 items-start">
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl border border-ink/10 shadow-sm p-6 md:p-8">
            <form method="post" action="/api/contact" class="space-y-6">
              <input type="hidden" name="formType" value="contact" />

                {/* Honeypot (hidden) */}
                  <div class="hidden" aria-hidden="true">
                    <label>
                      Leave this field empty
                      <input type="text" name="website_hp" tabindex="-1" autocomplete="off" />
                    </label>
                  </div>
                  
              {errorMessage && (
                <div
                  class="rounded-md border border-red-300 bg-red-50 px-4 py-3 text-sm text-red-900"
                  role="alert"
                  aria-live="assertive"
                >
                  <div class="flex items-center gap-2">
                    <Icon name="alert-triangle" class="w-5 h-5 flex-shrink-0" alt="Error" />
                    <strong>Validation Error:</strong> {errorMessage}
                  </div>
                </div>
              )}

              <div class="space-y-2">
                <label for="name" class="block text-sm font-medium text-ink">
                  Your name
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="Alex Smith"
                  autocomplete="name"
                />
              </div>

              <div class="space-y-2">
                <label for="email" class="block text-sm font-medium text-ink">
                  Work email
                </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="you@company.co.uk"
                  autocomplete="email"
                />
              </div>

              <div class="space-y-2">
                <label for="company" class="block text-sm font-medium text-ink">
                  Organisation (optional)
                </label>
                <input
                  id="company"
                  name="company"
                  type="text"
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="Your company or team name"
                  autocomplete="organization"
                />
              </div>

              <div class="space-y-2">
                <label for="message" class="block text-sm font-medium text-ink">
                  What’s happening, and what outcome do you want?
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="For example: we’ve got a key initiative that’s slowed down and we need to get it moving again..."
                ></textarea>
              </div>

              <p class="text-xs text-ink/50 mt-2">
                We’ll only use your details to reply, not to spam you or sneak you onto a newsletter.
                Read our
                <CtaLink
                  href="/privacy"
                  category="CONTACT_FORM"
                  label="PRIVACY_POLICY_LINK"
                  class="underline hover:text-accent"
                >
                  privacy policy
                </CtaLink>.
                <br />
                We'll reply back to you the same day, unless it's a weekend, then we'll reply on the next working day.
              </p>
              <div class="space-y-3">
                <button
                  type="submit"
                  data-ga4-cta="CONTACT_FORM_SUBMIT"
                  class="btn btn-primary btn-lg inline-flex items-center gap-2"
                >
                  <Icon name="send" class="w-5 h-5 stroke-current text-current" alt="" />
                  Send message
                </button>

                <div
                  id="form-success"
                  class="hidden rounded-md border border-green-200 bg-green-50 px-4 py-3 text-sm text-green-900"
                  role="status"
                  aria-live="polite"
                >
                  Thanks. We’ve got your message and we’ll reply soon.
                </div>
              </div>
            </form>
          </div>
        </div>

        <div class="space-y-6">
          <div class="bg-ink text-white rounded-xl p-6 space-y-4 backdrop-blur">
            <h2 class="text-base font-semibold flex items-center gap-2">
              Other ways to reach us
            </h2>

            <ul class="space-y-3 text-sm text-white/80">
              <li class="flex items-center gap-2">
                <Icon name="phone-outgoing" class="w-5 h-5 text-white mt-0.5" alt="Telephone" />
                <CtaLink href="tel:+447352050404" category="CONTACT_SIDEBAR" label="PHONE" class="hover:text-white transition">
                  +44 (0)7352 050 404
                </CtaLink>
              </li>

              <li class="flex items-center gap-2">
                <Icon name="at-sign" class="w-5 h-5 text-white mt-0.5" alt="Email" />
                <CtaLink href="mailto:hello@reignites.co.uk" category="CONTACT_SIDEBAR" label="EMAIL" class="hover:text-white transition">
                  hello@reignites.co.uk
                </CtaLink>
              </li>

              <li class="flex items-center gap-2">
                <CtaLink
                  href="https://wa.me/447352050404"
                  category="CONTACT_SIDEBAR"
                  label="WHATSAPP"
                  target="_blank"
                  rel="noreferrer"
                  class="hover:text-white transition"
                >
                  <img
                    src="/assets/social/WhatsAppButtonGreenSmall.svg"
                    alt="WhatsApp"
                    class="h-10 w-auto"
                    loading="lazy"
                  />
                </CtaLink>
              </li>

              <li class="pt-2 text-xs text-white/60 leading-relaxed">
                Usually available Monday–Friday, 09:00–17:00 GMT.
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <CookieConsent />

  <script is:inline>
    (function () {
      try {
        var params = new URLSearchParams(window.location.search);
        if (params.get('sent') === '1') {
          var el = document.getElementById('form-success');
          if (el) {
            el.classList.remove('hidden');

            if (typeof gtag === 'function') {
              gtag('event', 'generate_lead', {
                event_category: 'form',
                event_label: 'contact_page_submission'
              });
            }

            var url = new URL(window.location.href);
            url.searchParams.delete('sent');
            url.searchParams.delete('error');
            window.history.replaceState({}, '', url.toString());

            el.setAttribute('tabindex', '-1');
            el.focus();
          }
        }
      } catch (_) {}

      document.addEventListener('click', function(e) {
        var link = e.target.closest('a');
        if (!link) return;

        var href = link.getAttribute('href');
        if (!href) return;

        var category = null;
        var label = null;

        if (href.startsWith('tel:')) {
          category = 'CONTACT_SIDEBAR';
          label = 'PHONE';
        }
        else if (href.startsWith('mailto:')) {
          category = 'CONTACT_SIDEBAR';
          label = 'EMAIL';
        }
        else if (href.includes('wa.me')) {
          category = 'CONTACT_SIDEBAR';
          label = 'WHATSAPP';
        }

        if (category && label && typeof gtag === 'function') {
          gtag('event', 'click_contact', {
            'link_category': category,
            'link_label': label,
            'link_url': href
          });
        }
      });
    })();
  </script>
</BaseLayout>
