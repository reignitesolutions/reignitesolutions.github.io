---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import Icon from '../components/Icon.astro';

const pageTitle = 'Contact | Reignite Solutions';
const pageDesc =
  'Contact Reignite Solutions — tell us what’s stuck or unclear in your organisation and we’ll outline a practical way forward.';
---
<BaseLayout title={pageTitle} description={pageDesc}>
  <Header />

  <main class="min-h-screen bg-surface">
    <!-- HERO / INTRO -->
    <section class="pt-28 md:pt-32 pb-10">
      <div class="container-reignite max-w-6xl">
        <span class="inline-flex items-center gap-2 bg-accent/10 text-accent text-xs font-semibold uppercase tracking-wide px-4 py-1 rounded-full mb-5">
          Contact Reignite
        </span>
        <h1 class="text-3xl md:text-4xl font-display font-extrabold text-ink mb-3">
          Let’s talk about what you’re trying to move.
        </h1>
        <p class="text-ink/70 max-w-3xl">
          Tell us what’s stalled, noisy, or not landing with stakeholders. We’ll come back with a clear, outcome-led way to fix it.
        </p>
      </div>
    </section>

    <!-- FORM + CONTACT DETAILS GRID -->
    <section class="pb-20">
      <div class="container-reignite max-w-6xl grid lg:grid-cols-3 gap-10 items-start">
        <!-- FORM -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl border border-ink/10 shadow-sm p-6 md:p-8">
            <form
              method="post"
              action="/api/contact"
              class="space-y-6"
            >
              <!-- name -->
              <div class="space-y-2">
                <label for="name" class="block text-sm font-medium text-ink">
                  Your name
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="Alex Smith"
                  autocomplete="name"
                />
              </div>

              <!-- email -->
              <div class="space-y-2">
                <label for="email" class="block text-sm font-medium text-ink">
                  Work email
                </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="you@company.co.uk"
                  autocomplete="email"
                />
              </div>

              <!-- organisation -->
              <div class="space-y-2">
                <label for="company" class="block text-sm font-medium text-ink">
                  Organisation (optional)
                </label>
                <input
                  id="company"
                  name="company"
                  type="text"
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="Your company or team name"
                  autocomplete="organization"
                />
              </div>

              <!-- message -->
              <div class="space-y-2">
                <label for="message" class="block text-sm font-medium text-ink">
                  What’s happening, and what outcome do you want?
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full rounded-md border border-ink/10 bg-surface/60 px-4 py-3 text-sm text-ink shadow-sm focus:outline-none focus:ring-2 focus:ring-accent/60 focus:border-accent"
                  placeholder="For example: we’ve got a key initiative that’s slowed down and we need to get it moving again..."
                ></textarea>
              </div>

              <!-- small GDPR note -->
              <p class="text-xs text-ink/50 mt-2">
                We’ll only use your details to reply - not to spam you, sell you, or serenade you in marketing emails.<br>  
                You can read the serious stuff in our <a href="/privacy" class="underline hover:text-accent">privacy policy</a>.
              </p>

              <!-- submit -->
              <div>
                <button
                  type="submit"
                  class="inline-flex items-center gap-2 px-6 py-3 rounded-lg text-white font-bold tracking-wide
                  bg-accent hover:bg-black transition shadow-md hover:shadow-lg text-sm md:text-base"
                >
                  <Icon name="send" class="w-5 h-5 text-white" alt="" />
                  Send message
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- CONTACT DETAILS SIDEBAR -->
        <div class="space-y-6">
          <div class="bg-ink text-white rounded-xl p-6 space-y-4 backdrop-blur">
            <h2 class="text-base font-semibold flex items-center gap-2">
              Other ways to reach us
            </h2>

            <ul class="space-y-3 text-sm text-white/80">
              <li class="flex items-center gap-2">
                <Icon name="phone-outgoing" class="w-5 h-5 text-white mt-0.5" alt="Telephone" />
                <a href="tel:+447352050404" class="hover:text-white transition">
                  +44 (0)7352 050 404
                </a>
              </li>

              <li class="flex items-center gap-2">
                <Icon name="at-sign" class="w-5 h-5 text-white mt-0.5" alt="Email" />
                <a href="mailto:hello@reignites.co.uk" class="hover:text-white transition">
                  hello@reignites.co.uk
                </a>
              </li>

              <li class="flex items-center gap-2">
               <a
                  href="https://wa.me/447352050404"
                  target="_blank"
                  rel="noreferrer"
                  class="hover:text-white transition"
                >
                  <img
                    src="/assets/social/WhatsAppButtonGreenSmall.svg"
                    alt="WhatsApp"
                    class="h-10 w-auto"
                    loading="lazy"
                  />
                </a>
              </li>

              <li class="pt-2 text-xs text-white/60 leading-relaxed">
                Based in Ilkley, West Yorkshire · UK<br>  
                Usually available Monday–Friday, 09:00–17:00.
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <CookieConsent />
</BaseLayout>