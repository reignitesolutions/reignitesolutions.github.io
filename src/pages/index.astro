---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import BelowFold from '../components/BelowFold.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';

const pageTitle = 'Reignite: Digital Agency for Clarity, Momentum, and Results';
const pageDesc =
  'RFull-service digital agency. We combine strategy, design, and delivery to fix problems, accelerate teams, and build products that work. No buzzwords. Real results.';
---
