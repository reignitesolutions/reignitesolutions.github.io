---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';

const pageTitle = 'Press & Media | Reignite Solutions';
const pageDesc =
  'Press, media and partnership information for Reignite Solutions, a UK-based consulting and digital delivery studio.';
---
<BaseLayout title={pageTitle} description={pageDesc}>
  <Header />

  <main class="min-h-screen bg-surface">
    <section class="pt-28 md:pt-32 pb-16">
      <div class="container-reignite max-w-4xl space-y-8">
        <div>
          <span class="inline-flex items-center gap-2 bg-accent/10 text-accent text-xs font-semibold uppercase tracking-wide px-4 py-1 rounded-full mb-5">
            Press &amp; Media
          </span>
          <h1 class="text-3xl md:text-4xl font-display font-extrabold text-ink mb-4">
            Press &amp; media
          </h1>
          <p class="text-ink/70">
            Reignite Solutions helps UK organisations turn intent into delivery. If you need a quote, background context, or a
            speaker on delivery, product, or operating models for digital teams, this page is for you.
          </p>
        </div>

        <section class="space-y-3 bg-white rounded-xl border border-ink/10 p-6 shadow-sm">
          <h2 class="text-xl font-display font-semibold text-ink">Media contact</h2>
          <p class="text-ink/70">
            For all media, podcast, partnership or speaking enquiries:
          </p>
          <ul class="text-ink/80 text-sm space-y-1">
            <li>Email: <a href="mailto:hello@reignites.co.uk" class="text-accent underline">hello@reignites.co.uk</a></li>
            <li>Telephone: +44 (0)7352 050 404</li>
            <li>Location: Ilkley, West Yorkshire, United Kingdom</li>
          </ul>
        </section>

        <section class="space-y-3">
          <h2 class="text-xl font-display font-semibold text-ink">What we can talk about</h2>
          <p class="text-ink/70">
            We’re happy to provide commentary or contribution on:
          </p>
          <ul class="list-disc pl-5 space-y-2 text-ink/80 text-sm">
            <li>Delivery and execution for UK digital and product teams</li>
            <li>How to get stalled work moving again</li>
            <li>Outcome-first ways of working</li>
            <li>Fractional delivery / product leadership</li>
            <li>Working with remote or hybrid teams</li>
          </ul>
        </section>

        <section class="space-y-3">
          <h2 class="text-xl font-display font-semibold text-ink">Brand assets</h2>
          <p class="text-ink/70">
            You may use our name and logo in articles, event listings and podcast artwork, provided it is not misleading and is
            used in good faith.
          </p>
          <p class="text-ink/70">
            Logos and social assets:  
            <a href="/assets/brand/logo-master.png" class="text-accent underline">Primary logo</a> ·
            <a href="/assets/brand/logo-web.png" class="text-accent underline">Web logo</a> ·
            <a href="/assets/social/og-image.jpg" class="text-accent underline">OG / social image</a>
          </p>
          <p class="text-xs text-ink/40">
            For anything bespoke (co-branding, event packs), contact us first.
          </p>
        </section>

        <section class="space-y-3 pb-10">
          <h2 class="text-xl font-display font-semibold text-ink">Attribution</h2>
          <p class="text-ink/70">
            Please credit “Reignite Solutions, Ilkley, West Yorkshire” and link to
            <a href="https://reignites.co.uk" class="text-accent underline">https://reignites.co.uk</a>.
          </p>
        </section>
      </div>
    </section>
  </main>

  <Footer />
  <CookieConsent />
</BaseLayout>
