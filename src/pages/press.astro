---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';

// ADDED for tracking
import CtaLink from '../components/CtaLink.astro';

const pageTitle = 'Press & Media | Reignite Solutions';
const pageDesc =
  'Press, media and partnership information for Reignite Solutions, a UK-based consulting and digital delivery studio.';
---
<BaseLayout title={pageTitle} description={pageDesc}>
  <Header />

  <main class="min-h-screen bg-surface">
    <section class="pt-28 md:pt-32 pb-16">
      <div class="container-reignite max-w-4xl space-y-8">
        <div>
          <span class="inline-flex gap-2 bg-accent/10 text-accent text-xs font-semibold uppercase tracking-[0.25em] px-4 py-1 mb-4 rounded-full">
            Press &amp; Media
          </span>
          <h1 class="text-3xl md:text-4xl font-display font-extrabold text-ink mb-4">
            Press &amp; media
          </h1>
          <p class="text-ink/70">
            Reignite Solutions helps businesses, big and small, turn intent into delivery. If you need a quote, background context, or a
            speaker on delivery, product, or operating models for digital teams, this page is for you.
          </p>
        </div>

        <section class="space-y-3 bg-white rounded-xl border border-ink/10 p-6 shadow-sm">
          <h2 class="text-xl font-display font-semibold text-ink">Media contact</h2>
          <p class="text-ink/70">
            For all media, podcast, partnership or speaking enquiries:
          </p>
          <ul class="text-ink/80 text-sm space-y-1">
            <li>
              Email:
              <CtaLink
                href="mailto:hello@reignites.co.uk"
                category="PRESS_CONTACT"
                label="EMAIL"
                class="text-accent underline"
              >
                hello@reignites.co.uk
              </CtaLink>
            </li>
            <li>
              Telephone:
              <CtaLink
                href="tel:+447352050404"
                category="PRESS_CONTACT"
                label="PHONE"
                class="text-ink/80"
              >
                +44 (0)7352 050 404
              </CtaLink>
            </li>
            <li>Location: Ilkley, West Yorkshire, United Kingdom</li>
          </ul>
        </section>

        <section class="space-y-3">
          <h2 class="text-xl font-display font-semibold text-ink">What we can talk about</h2>
          <p class="text-ink/70">
            We’re happy to provide commentary or contribution on:
          </p>
          <ul class="list-disc pl-5 space-y-2 text-ink/80 text-sm">
            <li>Delivery and execution for UK digital and product teams</li>
            <li>How to get stalled work moving again</li>
            <li>Outcome-first ways of working</li>
            <li>Fractional delivery / product leadership</li>
            <li>Working with remote or hybrid teams</li>
          </ul>
        </section>

        <section class="space-y-3">
          <h2 class="text-xl font-display font-semibold text-ink">Brand assets</h2>
          <p class="text-ink/70">
            You may use our name and logo in articles, event listings and podcast artwork, provided it is not misleading and is
            used in good faith.
          </p>
          <p class="text-ink/70">
            Logos and social assets:
            <CtaLink href="/assets/brand/logo-master.png" category="PRESS_ASSET" label="PRIMARY_LOGO" class="text-accent underline">
              Primary logo
            </CtaLink>
            ·
            <CtaLink href="/assets/brand/logo-web.png" category="PRESS_ASSET" label="WEB_LOGO" class="text-accent underline">
              Web logo
            </CtaLink>
            ·
            <CtaLink href="/assets/social/og-image.jpg" category="PRESS_ASSET" label="SOCIAL_IMAGE" class="text-accent underline">
              OG / social image
            </CtaLink>
          </p>
          <p class="text-xs text-ink/40">
            For anything bespoke (co-branding, event packs), contact us first.
          </p>
        </section>

        <section class="space-y-3 pb-10">
          <h2 class="text-xl font-display font-semibold text-ink">Attribution</h2>
          <p class="text-ink/70">
            Please credit “Reignite Solutions" and link to
            <CtaLink href="https://reignites.co.uk" category="PRESS_ATTRIBUTION" label="WEBSITE_LINK" class="text-accent underline">
              https://reignites.co.uk
            </CtaLink>.
          </p>
        </section>
      </div>
    </section>
  </main>

  <Footer />
  <CookieConsent />
</BaseLayout>